<li class="box <%= @state %> task-list-element-<%=@task.id%>">
	<div class="row info">
		
		<div class="row">
	  	<div class="small-4 large-4 columns">
			Task:
			</div>
	  	<div class="small-8 large-8 columns">
			<span class="task-task">
				<%= @task.task %>
			</span>
			</div>
		</div>

		<div class="row">
	  	<div class="small-4 large-4 columns">
			Starting Time:
			</div>
	  	<div class="small-8 large-8 columns">
			<span class="task-starttime">
			<% if @task.starttime %>
				<%= @task.starttime.strftime("%A, %B #{@task.endtime.day.ordinalize}, %Y, %I:%M %P") %>
			<% end %>
			</span>
			</div>
		</div>

		<div class="row">
	  	<div class="small-4 large-4 columns">
			Ending Time:
			</div>
	  	<div class="small-8 large-8 columns">
			<span class="task-endtime">
			<% if @task.endtime %>
				<%= @task.endtime.strftime("%A, %B #{@task.endtime.day.ordinalize}, %Y, %I:%M %P") %>
			<% end %>
			</span>
			</div>
		</div>

	</div>
  
  <div class="row buttons">

	  <div class="small-6 large-3 columns">
			<% if !(@state == :claimed || @state == :completed) %>
				<%= link_to "Claim Task<i class='fa fa-flag fa-2x fa-fw'></i>".html_safe, "/tasks/#{@task.id}?change=claimed", :class => "button", :method => :put, :remote => true %>
			<% else %>
				Claimed by: <br>
				<%= @task.user %>
			<% end %>
	  </div>

	  <div class="small-6 large-3 columns">
	  	<% if @state != :completed %>
			<%= link_to "Complete Task<i class='fa fa-check fa-2x fa-fw'></i>".html_safe, "/tasks/#{@task.id}?change=completed", :class => "button success", :method => :put, :remote => true %>
			<% else %>
				Completed at: <br>
				<%= @task.completed_at.strftime("%A, %B #{@task.endtime.day.ordinalize}, %Y, %I:%M %P") %>
			<% end %>
	  </div>
	  
	  <div class="small-6 large-3 columns">
	  	<% if @state != :completed %>
				<%= link_to "Edit Task<i class='fa fa-edit fa-2x fa-fw'></i>".html_safe, edit_task_path(@task.id), :class => "button", :method => :get, :remote => true %>
			<% else %>
				Completed by: <br>
				<% if @task.user.firstname && @task.user.lastname %>
					<%= "#{@task.user.firstname} #{@task.user.lastname}" %>
				<% else %>
					<%= "#{@task.user.email}" %>
				<% end %>
			<% end %>
	  </div>
	  
	  <div class="small-6 large-3 columns">
			<%= link_to "Delete Task<i class='fa fa-minus-square fa-2x fa-fw'></i>".html_safe, "/tasks/#{@task.id}", :class => "button warning", :method => :delete, :remote => true, data: { confirm: "Are you sure you want to delete this task?" } %>
	  </div>
	
	</div>
</li>