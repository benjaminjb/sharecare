<div class="row">
	<div class="pending-invites-partial"><%= render "invitations/pending_invites" %></div>
</div>

<div class="row">
	<div class="active-teams-partial"><%= render "teams/active_teams" %></div>
</div>

<div class="row team-maker">
	<div class="small-8 small-centered large-centered columns">
		<%= form_tag("/teams/", method: "post", remote: true) do %>
		  <%= label_tag('team[name]', "Name:") %>
		  <%= text_field_tag('team[name]') %>
			<%= button_tag(type: "submit", class: "button") do %>
		    Create New Team <i class="fa fa-heart fa-2x fa-fw"></i>
			<% end %>
		<% end %>
	</div>
</div>

