			<%= link_to 'Reject Invitation<i class="fa fa-close fa-2x fa-fw"></i>'.html_safe, "/invitations/#{@invite.id}?join=false", :remote => true, :class => "button", :method => :delete, data: { confirm: "Are you sure you want to reject this invitation?" } %>
